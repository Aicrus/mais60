{
  "expo": {
    "name": "Mais 60 Saúde",
    "slug": "mais-60-saude",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mais-60-saude",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mais60saude.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mais60saude.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Mais 60 Saúde - Aplicativo de Saúde para Idosos",
      "description": "Aplicativo intuitivo para gerenciamento de saúde em 5 áreas-chave através de conteúdo multimídia para pessoas com 60+ anos.",
      "lang": "pt-BR",
      "themeColor": "#430593",
      "backgroundColor": "#ffffff",
      "templatePath": "./web/index.html",
      "build": {
        "minify": true,
        "babel": {
          "useTransformRuntime": true
        }
      },
      "performance": true,
      "splashScreenOptions": {
        "backgroundColor": "#f9fafb",
        "darkMode": {
          "backgroundColor": "#111827"
        }
      },
      "optimization": {
        "treeshaking": true,
        "splitChunks": true
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-localization",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "seu-projeto-id"
      }
    },
    "fonts": [
      {
        "family": "Poppins_300Light",
        "source": "@expo-google-fonts/poppins"
      },
      {
        "family": "Poppins_400Regular", 
        "source": "@expo-google-fonts/poppins"
      },
      {
        "family": "Poppins_500Medium",
        "source": "@expo-google-fonts/poppins"
      },
      {
        "family": "Poppins_600SemiBold",
        "source": "@expo-google-fonts/poppins"
      },
      {
        "family": "Poppins_700Bold",
        "source": "@expo-google-fonts/poppins"
      }
    ]
  }
}
